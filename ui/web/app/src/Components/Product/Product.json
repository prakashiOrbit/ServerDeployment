{
  "division": {
    "name": "Product Header",
    "formelements": [
      {
        "title": "CREATE NEW PRODUCT",
        "details": [
          {
            "label": "Item Name",
            "id": "itemName",
            "control": "textbox",
            "required": true,
            "minLength": 2,
            "pattern": "^[^0-9]+$",
            "errorMessage":"Enter a valid Item Name(eg. Apple , Cabbage."
          },
          {
            "label": "Item Category",
            "id": "itemCategory",
            "control": "dropdown",
            "required": true,
            "options": [
              {
                "value": "Fruits",
                "label": "Fruits"
              },
              {
                "value": "Vegetables",
                "label": "Vegetables"
              }
            ]
          },
          {
            "label": "Quantity",
            "id": "quantity",
            "control": "textbox",
            "required": true,
            "pattern": "^\\d+$",
            "errorMessage": "Quantity must be a positive integer."
          },
          {
            "label": "Unit Of Measurement",
            "id": "UOM",
            "control": "dropdown",
            "required": true,
            "options": [
              {
                "value": "Kilograms",
                "label": "Kilograms"
              },
              {
                "value": "Grams",
                "label": "Grams"
              },
              {
                "value": "Piece",
                "label": "Piece"
              }
            ]
          },
          {
            "label": "Base Price",
            "id": "basePrice",
            "control": "textbox",
            "required": true,
            "minLength": 1,
            "pattern": "^\\d+(?:\\.\\d+)?\\s*$",
            "errorMessage": "Enter a valid Base Price(eg. 67.34, 17)"
          }
          
        ]
      }
    ]
  }
}
