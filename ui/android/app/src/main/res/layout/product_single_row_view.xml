<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white1"
    android:layout_centerInParent="true">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"

    >


    <androidx.cardview.widget.CardView
        android:id="@+id/single_product"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:background="@color/white1"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/white1">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@color/white1">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_favorite_border"
                    app:tint="@color/black" />

                <ImageView
                    android:id="@+id/product_img"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/onion" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_img"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:maxLines="1"
                            android:text="FruitName"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/product_qty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/product_name"
                            android:layout_marginStart="5dp"
                            android:maxLines="1"
                            android:text="1 KG"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/product_dis_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/product_qty"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:maxLines="1"
                            android:text="₹36"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/product_dis_price"
                            android:layout_marginStart="5dp"
                            android:maxLines="1"
                            android:text="₹25"
                            android:textColor="@color/black"
                            android:textSize="22sp" />

                        <ImageView
                            android:id="@+id/add_cartquantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/product_dis_price"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/plus"
                            android:layout_marginRight="10dp"


                            >

                        </ImageView>
                    </RelativeLayout>
                </LinearLayout>



            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>




</RelativeLayout>
