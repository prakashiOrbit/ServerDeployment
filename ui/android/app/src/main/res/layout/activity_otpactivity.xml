<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/getnumber"
                android:gravity="right"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="160dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <com.chaos.view.PinView
            android:id="@+id/pin_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:pinItemCount="4"
            app:itemBackground="@drawable/pin_item_bg"
            app:itemSpacing="10dp"
            app:itemSize="50dp"
            app:itemTextAppearance="@style/PinTextAppearance"
            app:itemTextColor="@color/pin_item_text_color"
            app:hideLineWhenFilled="true"
            app:showLineWhenFilled="true"
            app:lineWidth="2dp"/>

        <TextView
            android:id="@+id/link"
            android:hint="Enter 6 digit code"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text=" Waiting to automatically detectan SMS sent to "
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/wrongnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="Wrong number?"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp" />



        <Button
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/Green4"
            android:text="Verify Code"
            android:textColor="@color/white"
            android:transitionName="transition_OTP_screen" />

    </LinearLayout>







</LinearLayout>

